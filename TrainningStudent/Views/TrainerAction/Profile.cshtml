@model TrainningStudent.Models.Trainer
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}
<br />
<h2>Profile Trainer</h2>

    <div class="card border-left-primary shadow h-auto py-sm-3" >
        <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                               
                            </div>
                            <div class="col-md-4">
                                <div class="profile-head">
                                    <h5>
                                        About
                                    </h5> 
                                </div>
                            </div>
                            <br />
                            <div class="col-md-2">
                                @Html.ActionLink("Edit Profile", "Edit", new { id = Model.TrainerID }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-2">

                            </div>
                            <br />
                            <div class="col-md-8">
                                <div class="tab-content profile-tab" id="myTabContent">
                                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Account    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>@Html.DisplayFor(model => model.TrainerName)</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Password    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>123456</h5>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Name    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>@Html.DisplayFor(model => model.TrainerName)</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Workplace    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>@Html.DisplayFor(model => model.WorkPlace)</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Phone    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>@Html.DisplayFor(model => model.Phone)</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5> Classroom    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>@Html.DisplayFor(model => model.Email)</h5>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Address    :</h5>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>@Html.DisplayFor(model => model.Email)</h5>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

        </div>
    </div>

    

