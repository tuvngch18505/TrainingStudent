                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary btn-large" />   |     @Html.ActionLink("Back to List", "Index" , null, new { @class = "btn btn-primary btn-large" })
            </div>
        </div>
    </div>
}

