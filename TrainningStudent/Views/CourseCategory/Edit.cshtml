@model TrainningStudent.Models.CourseCategory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}
<br />
<h2>Edit CourseCategory</h2> 
              <hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
